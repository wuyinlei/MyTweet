<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/tweet_white"
              android:orientation="vertical">

    <include layout="@layout/layout_status_header"/>

    <LinearLayout
        android:id="@+id/llStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/space_s"
        android:background="@color/tweet_bg"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivMentioned"
            android:layout_width="@dimen/avatar_size_xl"
            android:layout_height="@dimen/avatar_size_xl"
            android:src="@mipmap/ic_place_holder"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/tweet_bg"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvMentionedName"
                style="@style/tv_m_black_sl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/tweet_bg"
                android:padding="@dimen/space_s"
                android:text="@string/empty_string"/>

            <TextView
                android:id="@+id/tvReContent"
                style="@style/tv_s_grey_sl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/tweet_bg"
                android:maxLines="2"
                android:paddingLeft="@dimen/space_s"
                android:singleLine="false"
                android:text="@string/empty_string"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>